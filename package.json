{
  "name": "etp-express-monorepo",
  "version": "1.0.0",
  "description": "ETP Express - Monorepo with security tooling",
  "private": true,
  "scripts": {
    "security:scan": "gitleaks detect --source . --verbose --no-git --config .gitleaks.toml",
    "security:scan:history": "gitleaks detect --source . --verbose --config .gitleaks.toml",
    "security:scan:staged": "gitleaks protect --verbose --staged --config .gitleaks.toml",
    "test:e2e": "cd e2e && npx tsx run-tests.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/puppeteer": "^5.4.7",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.56.1",
    "prettier": "^3.7.0",
    "puppeteer": "^24.31.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.21.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "jws": "^4.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --check"
    ]
  }
}
