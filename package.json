{
  "name": "etp-express-monorepo",
  "version": "1.0.0",
  "description": "ETP Express - Monorepo with security tooling",
  "private": true,
  "scripts": {
    "security:scan": "gitleaks detect --source . --verbose --no-git --config .gitleaks.toml",
    "security:scan:history": "gitleaks detect --source . --verbose --config .gitleaks.toml",
    "security:scan:staged": "gitleaks protect --verbose --staged --config .gitleaks.toml",
    "test:e2e": "npx playwright test",
    "test:e2e:setup": "bash e2e/setup-env.sh --setup",
    "test:e2e:check": "bash e2e/setup-env.sh",
    "test:e2e:chromium": "npx playwright test --project=chromium",
    "test:e2e:auth": "npx playwright test --project=auth",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:report": "npx playwright show-report",
    "test:a11y": "playwright test e2e/accessibility.spec.ts",
    "audit:a11y": "pa11y-ci",
    "aios:validate:structure": "node .aios-core/infrastructure/scripts/source-tree-guardian/index.js",
    "aios:sync:ide": "node .aios-core/infrastructure/scripts/ide-sync/index.js sync",
    "aios:sync:ide:validate": "node .aios-core/infrastructure/scripts/ide-sync/index.js validate"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@kayvan/markdown-tree-parser": "^1.5.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^7.0.4",
    "@types/opossum": "^8.1.9",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.1",
    "execa": "^5.1.1",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "handlebars": "^4.7.8",
    "inquirer": "^8.2.6",
    "isolated-vm": "^5.0.4",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "picocolors": "^1.1.1",
    "semver": "^7.7.2",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/puppeteer": "^5.4.7",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "pa11y": "^9.0.1",
    "pa11y-ci": "^4.0.1",
    "playwright": "^1.56.1",
    "prettier": "^3.7.0",
    "puppeteer": "^24.31.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.21.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "jws": "^4.0.0",
    "rxjs": "^7.8.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.0.0",
    "@rollup/rollup-linux-x64-musl": "^4.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --check"
    ]
  }
}
