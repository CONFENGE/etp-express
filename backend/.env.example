# ============================================================================
# ETP EXPRESS - ENVIRONMENT VARIABLES
# ============================================================================

# Application
NODE_ENV=development
PORT=3001
APP_NAME="ETP Express"
APP_VERSION="1.0.0"

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/etp_express
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=etp_express
DB_SYNCHRONIZE=false
DB_LOGGING=true

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# OpenAI API
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Perplexity API
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PERPLEXITY_MODEL=pplx-7b-online

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760

# PDF Generation
PDF_TIMEOUT=30000

# Logging
LOG_LEVEL=debug

# Analytics (opcional - Mixpanel ou PostHog)
ANALYTICS_ENABLED=false
MIXPANEL_TOKEN=
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking & Performance Monitoring
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxx.ingest.sentry.io/xxxxxxxxxxxxx
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=development

# Railway Specific (auto-injected in production)
# DATABASE_URL=${{Postgres.DATABASE_URL}}
# PORT=${{PORT}}
# RAILWAY_GIT_COMMIT_SHA=${{RAILWAY_GIT_COMMIT_SHA}} (usado para release tracking)
