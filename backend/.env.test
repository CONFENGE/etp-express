# ETP EXPRESS - TEST ENVIRONMENT VARIABLES
# Minimal configuration for E2E tests

# Application
NODE_ENV=test
PORT=3002
APP_NAME="ETP Express Test"
APP_VERSION="1.0.0"

# Frontend URL (CORS)
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173

# Database (PostgreSQL test database)
# Note: Requires PostgreSQL running locally
# Create test database: CREATE DATABASE etp_express_test;
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/etp_express_test
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=etp_express_test
DB_SYNCHRONIZE=true
DB_LOGGING=false

# JWT Authentication
JWT_SECRET=test-jwt-secret-key-for-e2e-tests-only
JWT_EXPIRATION=7d

# OpenAI API (mock values for tests)
OPENAI_API_KEY=sk-test-mock-key-for-e2e-tests
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Perplexity API (mock values for tests)
PERPLEXITY_API_KEY=pplx-test-mock-key-for-e2e-tests
PERPLEXITY_MODEL=pplx-7b-online

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760

# PDF Generation
PDF_TIMEOUT=30000

# Logging
LOG_LEVEL=error

# Analytics (disabled for tests)
ANALYTICS_ENABLED=false
MIXPANEL_TOKEN=
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Sentry (disabled for tests)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0
SENTRY_ENVIRONMENT=test
